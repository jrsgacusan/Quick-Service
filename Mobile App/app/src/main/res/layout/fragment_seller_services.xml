<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller_fragments.SellerServicesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backGroundShadow">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_fragmentSellerServices"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/hideThisImageView_fragmentSellerServices"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha=".3"
            android:src="@drawable/ic_services"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

        <TextView
            android:id="@+id/hideThisTextView_fragmentSellerServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".3"
            android:text="No services created. Create one?"
            app:layout_constraintBottom_toBottomOf="@+id/hideThisImageView_fragmentSellerServices"
            app:layout_constraintEnd_toEndOf="@+id/hideThisImageView_fragmentSellerServices"
            app:layout_constraintStart_toStartOf="@+id/hideThisImageView_fragmentSellerServices"
            app:layout_constraintTop_toBottomOf="@+id/hideThisImageView_fragmentSellerServices" />

        <TextView
            android:id="@+id/clickHereTextView_fragmentSellerServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:text="CLICK HERE"
            app:layout_constraintEnd_toEndOf="@+id/hideThisTextView_fragmentSellerServices"
            app:layout_constraintStart_toStartOf="@+id/hideThisTextView_fragmentSellerServices"
            app:layout_constraintTop_toBottomOf="@+id/hideThisTextView_fragmentSellerServices" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>